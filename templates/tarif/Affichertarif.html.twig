{% extends 'base-back.html.twig' %}
{% block body %}

    <div class="container-fluid">
        <h1 class="h3 mb-2 text-gray-800">Gestion des Publlicites</h1>
        <input class="form-control" id="myInput" type="text" id="navbar-search-input" placeholder="Searcher Publiciter" aria-label="search" aria-describedby="search">
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Liste des Publicite</h6>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    {% for message in app.flashes('info') %}
                        <div class="alert alert-success">
                            {{ message }}
                        </div>
                    {% endfor %}

                    <hr>

                    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0" border="2">
                        <thead>
                        <tr>
                            <th></th>
                            <th></th>
                            <th>identifiant </th>
                            <th>Prix Tous </th>
                            <th>Prix homme</th>
                            <th>Prix famme</th>
                            <th>Prix age</th>
                            <th>prix dureé</th>
                            <th>nombre de pub par cible</th>
                        </tr>
                        </thead>
                        <tfoot>
                        <tr>
                            <th></th>
                            <th></th>
                            <th>identifiant </th>
                            <th>Prix Tous </th>
                            <th>Prix homme</th>
                            <th>Prix famme</th>
                            <th>Prix age</th>
                            <th>prix dureé</th>
                            <th>nombre de pub par cible</th>
                        </tfoot>

                        <tbody id="hi">
                        {% for t in tarif %}
                            <tr>
                                <td><a href="{{ path('updateTarif',{'id': t.id}) }}">Modifier</a></td>

                                <td>
                                    {{ t.id }}
                                </td>
                                <td>
                                    {{ t.prixGenreTous}}
                                </td>
                                <td>
                                    {{ t.prixGenreHomme}}

                                </td>
                                <td>
                                    {{t.prixGenreFamme}}
                                </td>
                                <td>
                                    {{t.prixAges}}
                                </td>
                                <td>
                                    {{t.prixDuree}}
                                </td>
                                <td>
                                    {{t.prixDuree}}

                                <td>
                                    {{t.nbPubParCible}}
                                </td>
                            </tr>
                        {% endfor %}


                        </tbody>
                    </table>
                </div>
            </div>
        </div>

    </div>

    <footer class="sticky-footer bg-white">
        <div class="container my-auto">
            <div class="copyright text-center my-auto">
                <span>Copyright &copy; 9arini</span>
            </div>
        </div>
    </footer>



{% endblock %}
